{
 :deps {org.clojure/clojure {:mvn/version "RELEASE"}}
 :aliases {
           ;; - see https://nrepl.org/
           ;; - start a basic nREPL server on port 7888 for Claude MCP integration:
           :nrepl {:extra-deps {nrepl/nrepl {:mvn/version "RELEASE"}}
                   :main-opts ["-m" "nrepl.cmdline" "--port" "7888"]}
           ;; - see https://nrepl.org/
           ;; - start a CIDER-enhanced nREPL server on a random available port:
           :cider {:extra-deps {cider/cider-nrepl {:mvn/version "RELEASE"}}
                   :main-opts ["-m" "nrepl.cmdline" "--middleware" "[cider.nrepl/cider-middleware]"]}
           
           ;; Clojure MCP server for Claude Code integration
           :mcp {:deps {org.slf4j/slf4j-nop {:mvn/version "2.0.16"}
                        com.bhauman/clojure-mcp {:git/url "https://github.com/bhauman/clojure-mcp.git"
                                                 :git/tag "v0.1.8-alpha"
                                                 :git/sha "457f197"}}
                 :exec-fn clojure-mcp.main/start-mcp-server
                 :exec-args {:port 7888}}
           }
}
